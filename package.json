{
    "name": "portfolio",
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "astro": "astro",
        "build": "npm run check && astro build",
        "cf:wip": "git commit -m \"[CF-Pages-Skip] WIP\" && git push",
        "check": "astro check && npm run fmt:check && npm run lint",
        "deps": "ncu -i --format group --cooldown 3",
        "fmt": "prettier . --write",
        "fmt:check": "prettier . --check",
        "info": "astro info",
        "lint": "eslint .",
        "lint:debug": "eslint --inspect-config",
        "lint:fix": "eslint . --fix",
        "map:ascii": "docker run --rm -it --entrypoint /asciiworld/asciiworld grepco-mapgen:latest",
        "map:build": "docker build -t grepco-mapgen:latest mapgen",
        "map:debug": "docker run --rm -it --entrypoint sh grepco-mapgen:latest",
        "map:generate": "./mapgen/generate.sh",
        "map:update-source": "./mapgen/update-source.sh",
        "preview": "astro preview",
        "start": "concurrently  --kill-others --names astro,ts -c red,blue \"astro dev\" \"npm run typewatch\"",
        "typewatch": "astro check --watch --preserveWatchOutput"
    },
    "dependencies": {
        "@fontsource/exo-2": "^5.2.8",
        "astro": "^5.14.1",
        "clsx": "^2.1.1"
    },
    "devDependencies": {
        "@astrojs/check": "^0.9.4",
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.37.0",
        "@eslint/json": "^0.13.2",
        "@eslint/markdown": "^7.3.0",
        "@typescript-eslint/parser": "^8.45.0",
        "concurrently": "^9.2.1",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-astro": "^1.3.1",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "eslint-plugin-package-json": "^0.56.3",
        "eslint-plugin-perfectionist": "^4.15.1",
        "eslint-plugin-unicorn": "^61.0.2",
        "globals": "^16.4.0",
        "modern-normalize": "^3.0.1",
        "npm-check-updates": "^19.0.0",
        "postcss-preset-env": "^10.4.0",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "stylelint": "^16.25.0",
        "stylelint-config-standard": "^39.0.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0"
    },
    "engines": {
        "node": ">=22 <23"
    },
    "engineStrict": true
}
