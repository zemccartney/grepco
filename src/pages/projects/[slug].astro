---
import { getCollection, render } from "astro:content";

import Block from "../../components/block.astro";
import SubpageLayout from "../../layouts/subpage.astro";
import Typography from "../../layouts/typography.astro";

export const getStaticPaths = async () => {
    const projects = await getCollection("projects");

    return projects.map((project) => ({
        params: { slug: project.id },
        props: { project }
    }));
};

const { project } = Astro.props;
const { Content: Body } = await render(project);

const { description, name, repoUrl, url } = project.data;
console.log({ description });
---

<style>
    main {
        max-width: 40rem;
    }

    article {
        width: fit-content;
        margin-top: var(--spacing-two-rem);
    }

    .page-title {
        color: var(--color-primary-900);
        font-size: var(--font-size-4xl);
        letter-spacing: 0.05em;
        font-style: italic;
        margin-top: var(--spacing-four-rem);
        text-align: center;
        text-transform: uppercase;
        text-wrap: balance;

        @media (min-width: 40rem) {
            font-size: var(--font-size-7xl);
        }
    }

    .source-button-container {
        align-items: center;
        display: flex;
        flex-flow: row wrap;
        gap: var(--spacing-one-px);
        justify-content: center;
        margin-top: var(--spacing-two-rem);

        /* stylelint-disable-next-line no-descending-specificity */
        > * {
            min-width: 100px;
        }
    }

    .github-logo {
        display: inline-block;
        vertical-align: sub; /* kinda gross / accidental, but works */
    }

    .source-button {
        display: block; /* handle anchors */
        background-color: var(--color-primary-100);
        border: 4px solid var(--color-primary-700);
        border-style: inset;
        border-radius: 8px;
        color: var(--color-primary-900);
        font-size: var(--font-size-xl);
        font-weight: bold;
        padding: var(--spacing-threequarter-rem) var(--spacing-onedotfive-rem);
        text-decoration: none;

        &:hover,
        &:active {
            background-color: var(--color-primary-900);
            border-color: var(--color-primary-100);
            border-style: outset;
            color: var(--color-primary-100);
        }
    }
</style>

<SubpageLayout
    description={description}
    title={`Project: ${name}`}
>
    <main class="mx-auto">
        <h1 class="page-title">{name}</h1>
        <Block
            as="article"
            class="mx-auto"
            data-variant="metal"
            externalHeader
        >
            <Typography>
                <Body />
            </Typography>

            <div class="source-button-container">
                <a
                    class="source-button"
                    href={url}
                    >Check it out</a
                >
                <a
                    class="source-button"
                    href={repoUrl}
                >
                    <svg
                        class="github-logo"
